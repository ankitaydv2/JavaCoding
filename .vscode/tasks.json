{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "javac: compile active file",
            "type": "shell",
            "command": "javac",
            "args": [
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [
                "$javac"
            ]
        },
        {
            "label": "java: run active file",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                ".",
                "${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": [
                "javac: compile active file"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}